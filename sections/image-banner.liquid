<div class="absolute inset-x-0 top-1/2 -translate-y-1/2">

  {% for setting in section.setting %}
    {%- case setting.type -%}
      {%- when 'title' -%}
      <h2 class="max-w-[1000px] mx-auto text-[80px] text-white text-center font-serif">{{ setting.title | escape }}</h2>
    {%- endcase -%}
  {%- endfor -%}

</div>
<img
  src="{{ 'image-banner-background.png' | asset_img_url: '1920x' }}"
  alt="Background"
  class="w-full"
/>
<img
  src="{{ 'image-banner-left.png' | asset_img_url: '1000x' }}"
  alt="Background"
  class="absolute left-0 bottom-0 w-[35%]"
/>
<img
  src="{{ 'image-banner-right.png' | asset_img_url: '1000x' }}"
  alt="Background"
  class="absolute right-0 bottom-0 w-[65%]"
/>

{% schema %}
{
  "name": "Banni√®re",
  "tag": "section",
  "class": "relative",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre"
    }
  ]
}
{% endschema %}
