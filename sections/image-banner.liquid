<section id="Banner-{{ section.id }}" class="py-56">
  <div class="max-w-content mx-auto px-6">
    <h2 class="max-w-screen-md pl-16 text-[80px] text-white">{{ block.settings.text | escape }}</h2>
  </div>
</section>

{%- style -%}
  #Banner-{{ section.id }} {
    {%- if section.settings.image != blank -%}
    background: url({{ section.settings.image | image_url: width: 1140 }}) center / cover;
    {%- else -%}
    background-color: rgba(0, 0, 0, .9);
    {%- endif -%}
  }
{%- endstyle -%}

{% schema %}
{
  "name": "t:sections.image-banner.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "header",
      "content": "t:sections.image-banner.settings.header.content"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-banner.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.image-banner.blocks.heading.settings.heading.label"
        }
      ]
    }
  ]
}
{% endschema %}